<Window x:Class="SessionCacher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SessionCacher"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <ListBox x:Name="SavedSessions" HorizontalAlignment="Left" Height="270" VerticalAlignment="Top" Width="136" Margin="0,49,0,0" SelectionChanged="SavedSessions_OnSelectionChanged"/>
        <ListBox x:Name="OpenedPrograms" HorizontalAlignment="Left" Height="270" Margin="141,49,0,0" VerticalAlignment="Top" Width="376"/>
        <Button x:Name="refresh" Content="Refresh" HorizontalAlignment="Left" Margin="395,24,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>
        <Button x:Name="save" Content="Save" HorizontalAlignment="Left" Margin="315,24,0,0" VerticalAlignment="Top" Width="75" Click="save_Click_1"/>
        <Button x:Name="remove" Content="remove" HorizontalAlignment="Left" Margin="235,24,0,0" VerticalAlignment="Top" Width="75" Background="{DynamicResource {x:Static SystemColors.ScrollBarBrushKey}}" Click="remove_Click"/>

    </Grid>
</Window>
